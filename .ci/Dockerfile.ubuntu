ARG REF=master
ARG LISP=sbcl
FROM docker.grammatech.com/synthesis/sel/ubuntu-${LISP}:${REF}

RUN apt-get -y update && apt-get -y install python3 expect curl

COPY . /root/quicklisp/local-projects/resolve
WORKDIR /root/quicklisp/local-projects/resolve

ARG GT
ARG REPORT
ENV PATH=/usr/synth/bin:/root/quicklisp/local-projects/resolve/bin:$PATH
RUN make
CMD /bin/bash
